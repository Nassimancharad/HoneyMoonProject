@{
    ViewData["Title"] = "Home - HoneymoonShop";
    ViewData["NavBarBG"] = "http://placehold.it/1800x500";
}

<style>
    form p input {
        width: 100%;
        height: 35px;
    }

    .form-container {
        justify-content: center;
    }

    .controle-scherm {
        background-color: #f0597c;
    }

    .controle-scherm-gegevens {
        padding-left: 35px;
    }
</style>

<div class="row flex-container form-container">
    <div class="col-md-1 yellowBorder">
        <p>HIER DIE 3 cirkels</p>
    </div>
    <div class="col-md-5 yellowBorder">
        <h3>Stap 2, Gegevens invullen</h3>
        <form asp-controller="Afspraak" asp-action="Create" method="post">
            <p>
                <label>Voor- en achternaam</label>
                <input type="text" name="Telefoonnummer">
            </p>
            <p>
                <label>Trouwdatum</label>
                <input type="date" name="Trouwdatum">
            </p>
            <p>
                <label>Telefoonnummer</label>
                <input type="number" name="Telefoonnummer">
            </p>
            <p>
                <label>E-mailadres</label>
                <input type="email" name="user_email">
            </p>
            <p>
                <label>Herhaal E-mailadres</label>
                <input type="email" name="user_email">
            </p>
            <input type="checkbox" name="vehicle" value="Bike"> Ja, ik wil me graag aanmelden voor de inspirende nieuwsbrief van de HoneyMoon Shop<br><br>
            <!--HIER KOMT CHECKBOX-->
            <button type="submit" class="btn-standard text-uppercase"><strong>Naar stap 3</strong></button>
        </form>
    </div>
    <div class="col-md-5 controle-scherm yellowBorder">
        <div class="controle-scherm-gegevens">
            <h3>Gekozen tijd en datum:</h3>
            <p>Vul je persoonlijke gegevens in <br> om de pasafspraak compleet te maken.</p>
            <span class="" style="bottom: 35px; position: absolute"><img src="https://s23.postimg.org/5u22cqyez/arrow_2.png" /> Terug naar stap 1 om datum te wijzigen</span>
        </div>
    </div>
</div>

<div class="row flex-container form-container">
    <div class="col-md-6 yellowBorder" style="display: flex; flex-direction:column">
        <div class="">
            <p>die 3 buttons here</p>
        </div>
        <div class="">
            <h3>Stap 2, Gegevens invullen</h3>
            <form name="aanmelding" action="/administratie/aanmeldingverwerken" method="get">
                <div>Naam: <input name="Naam" type="text" /></div>
                <div>Geboortejaar: <input name="geboortejaar" type="text" /></div>
                <div><input type="submit" value="Aanmelden" /></div>
            </form>
        </div>
    </div>
    <div class="col-md-5 controle-scherm yellowBorder">
        <div class="controle-scherm-gegevens">
            <h3>Gekozen tijd en datum:</h3>
            <p>Vul je persoonlijke gegevens in <br> om de pasafspraak compleet te maken.</p>
        </div>
    </div>
</div>