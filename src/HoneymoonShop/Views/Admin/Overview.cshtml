@{
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    @*<link rel="stylesheet" href="~/css/admin.css">*@

    <style>
        body {
            background-color: #F0597c;
        }

        .row {
            border: solid green 1px;
        }

        .admin-login-container {
            position: relative;
            top: 50%;
            transform: translateY(100%);
        }

        .button-crud {
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            text-transform: uppercase;
        }

            .button-crud:hover {
                background-color: #43A047;
            }

        span.psw {
            float: right;
            padding-top: 16px;
        }

        .col-sm-6 {
            border: yellow solid 1px;
            background-color: #fff;
        }

            .col-sm-6 a {
                text-decoration: none;
            }
    </style>

</head>

<body>
    <div class="container admin-login-container">
        <div class="row ">

            <div class="col-sm-6 afspraak">
                <h1>Afspraak</h1>

                <a asp-controller="Afspraak" asp-action="AfspraakMaken">
                    <div class="button-crud text-center">Voeg afspraak toe</div>
                </a>
                <a asp-controller="Afspraak" asp-action="#">
                    <div class="button-crud text-center">Wijzig afspraak</div>
                </a>
                <a asp-controller="Afspraak" asp-action="#">
                    <div class="button-crud text-center">Verwijder afspraak</div>
                </a>
                <a asp-controller="Afspraak" asp-action="#">
                    <div class="button-crud text-center">Overzicht afspraken</div>
                </a>
            </div>

            <div class="col-sm-6 jurk">
                <h1>Jurk</h1>
                <a asp-controller="Admin" asp-action="AddDress">
                    <div class="button-crud text-center">Voeg jurk toe</div>
                </a>
                <a asp-controller="#" asp-action="#">
                    <div class="button-crud text-center">Wijzig jurk</div>
                </a>
                <a asp-controller="#" asp-action="#">
                    <div class="button-crud text-center">Verwijder jurk</div>
                </a>
                <a asp-controller="#" asp-action="#">
                    <div class="button-crud text-center">Overzicht jurken</div>
                </a>
            </div>
        </div>
    </div>
</body>

</html>