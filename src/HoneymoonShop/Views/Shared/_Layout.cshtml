@{ 
    ViewData["BackgroundStyle"] = "background-default";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/bootstrap-slider.min.css">
    <link rel="stylesheet" href="~/css/categorySelector.css">
    <link rel="stylesheet" href="~/css/Specifics/browse.css" />
    <link rel="stylesheet" href="~/css/Specifics/dressfinder.css" />
    <link rel="stylesheet" href="~/css/Specifics/index.css" />
    <link rel="stylesheet" href="~/css/Specifics/selectedDress.css" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
   
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.11.3.min.js"></script>
        
</head>

<body>
    <div class="container @ViewBag.BackgroundStyle">

        <!-- BEGIN HEADER -->
        <div class="row header flex-container flex-header text-center text-uppercase">
            <div class="col-md-1 yellowBorder">
                <a asp-action="Index" asp-controller="Home"><strong>Website</strong></a>
            </div>
            <div class="col-md-1 yellowBorder">
                <a asp-action="Index" asp-controller="DressFinder"><strong>Webshop</strong></a>
            </div>
            <div class="col-md-2 col-md-offset-6 text-right yellowBorder">
                <strong>T</strong> (010) 4126143
            </div>
            <div class="col-md-2 yellowBorder">
                <strong>Wat zoek je?</strong>
            </div>
        </div>
        <!-- END HEADER -->

        <!-- BEGIN NAVBAR -->
        <div class="row"> <!-- IMAGE IN THE BACKGROUND testImage -->
            <nav class="navbar navbar-default flex-navbar">
                <!-- REMOVE 'row' for mobile display-->
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header yellowBorder">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <div class="navbar-brand text-uppercase" href="#">Honeymoon Shop<span class="reg-mark">&reg;</span></div>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav navbar-right text-uppercase flex-container yellowBorder">
                            <!-- <li class="active"><a href="#">Home <span class="sr-only">(current)</span></a></li> -->
                            <li><a asp-action="Index" asp-controller="Home"><strong>Home</strong></a></li>
                            <li><a asp-action="Index" asp-controller="DressFinder"><strong>Bruid</strong></a></li>
                            <li><a asp-action="Index" asp-controller="Bruidegom"><strong>Bruidegom</strong></a></li>
                            <li><a asp-action="Index" asp-controller="Winkel"><strong>De winkel</strong></a></li>
                            <li><a asp-action="Index" asp-controller="Blog"><strong>Blog</strong></a></li>
                            <li><a asp-action="Index" asp-controller="Contact"><strong>Contact</strong></a></li>
                            <li>
                                <button onclick="location.href='@Url.Action("AfspraakMaken", "Afspraak")'" type="button" class="btn-standard text-uppercase"><strong>Afspraak maken</strong></button>
                            </li>
                            </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
                <!--<img class="img-responsive testImage" src="https://www.placehold.it/1400x800" alt="Image behind navbar" />-->
                <img class="img-responsive testImage" src="@ViewBag.NavBarBG" />
            </nav>
        </div>
        <!-- END NAVBAR -->

        @RenderBody()
        @RenderSection("scripts", required: false)
        @RenderSection("CustomStyle", false)
        @RenderSection("FooterSection", false)
        @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)

